extends ../layout

block content
    .row
        h2= nom
        .col-xs-12.col-md-4.col-md-offset-4
            form(method='post', action='/users/traitementEdition')
              .form-group
                if user
                    label(for='nom') Votre nom: 
                    input.require.form-control(type='text', name='nom', value= '#{user.nom}')
                    label(for='mail') Votre mail: 
                    input.require.form-control(type='email', name='mail', value= '#{user.mail}')
                else
                    label(for='nom') Votre nom: 
                    input.require.form-control(type='text', name='nom')
                    label(for='mail') Votre mail: 
                    input.require.form-control(type='email', name='mail')
                label(for='oldPassW') Votre ancien mot de passe: 
                input.form-control(type='password', name='oldPassW')
                label(for='passW') Votre nouveau mot de passe: 
                input.form-control(type='password', name='passW')
                label(for='confirmPassW') Confirmez nouveau mot de passe: 
                input.form-control(type='password', name='confirmPassW')
                br
                .text-center
                  input.btn.btn-success.btn-lg(type='submit', value='Changez moi Ã§a!')