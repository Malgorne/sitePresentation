extends ../layout

block content
    .row
        .col-xs-4.col-xs-offset-4
            h2 Je m&apos;inscris:
            |         
            form(method='post', action='/users/traitementInscription')
              .form-group
                if data
                    label(for='nom') Votre nom: 
                    input.form-control(type='text', name='nom' value='#{data.nom}')
                    |    
                    label(for='mail') Votre mail: 
                    input.form-control(type='email', name='mail' value='#{data.mail}')
                else
                    label(for='nom') Votre nom: 
                    input.form-control(type='text', name='nom')
                    |    
                    label(for='mail') Votre mail: 
                    input.form-control(type='email', name='mail')
                    |                 
                label(for='passW') Votre mot de passe: 
                input.form-control(type='password', name='passW')
                |                 
                label(for='confirmPassW') Confirmez votre mot de passe: 
                input.form-control(type='password', name='confirmPassW')
                |                 
                br
                |                 
                .text-center
                  input.bulleRouge.jaune(type='submit', value='Envoyer')
                  
    include ../footer